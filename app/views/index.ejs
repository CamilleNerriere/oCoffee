<%- include('partials/header') %>

    <main>

        <section class="section presentation">
            <div class="presentation__about">
                <div class="presentation__about__text">
                    <h2 class="section__title">Qui sommes-nous ?</h2>
                    <p class="presentation__about__text__paragraph">Jean et Jacques Pepper, deux frères passionnés
                        par le café, sont les fondateurs de notre
                        boutique. Avec une expertise approfondie et un amour profond pour cette délicieuse boisson,
                        ils ont créé un espace où le café est célébré comme une expérience raffinée et inspirante.
                    </p>
                </div>
                <div class="presentation__about__btn">
                    <a href="/articles" class="btn__link--catalog">Voir le catalogue</a>
                </div>
            </div>

            <img class="presentation__image" src="/img/about.webp" alt="">
        </section>

        <section class="section news">
            <h2 class="section__title">Nouveautés</h2>

            <div class="articles">

            <% if (locals.coffees && locals.coffees.length >= 3 ) { %>

                <% for( let index = coffees.length - 3; index < coffees.length; index++ ) { %>
                    <div class="article">
                        <div class="article__img__container">
                            <img class="article__img" src="/img/coffees/compressed/<%= coffees[index].reference %>.webp" alt="">
                        </div>
                        <div class="article__description">
                            <h3 class="article__title"><%= coffees[index].name %></h3>
                            <p><%= coffees[index].description %></p>
                        </div>
                        <div class="article__btn"><a href="/article">Découvrir</a></div>
                    </div>
                <% } %>

                



                <% } else { %>
                    <p>Aucune nouveauté pour le moment.</p>
                    <% } %>
                        
            </div> 
        </div>
        </section>

    </main>

    <%- include('partials/footer') %>